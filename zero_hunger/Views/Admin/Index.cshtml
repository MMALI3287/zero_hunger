
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    ViewBag.Title = "Home Page";
}
<main>
    <div class="row" aria-labelledby="aspnetTitle">
        <section class="col-md-6">
            <h1 id="title">Admin Dashboard</h1>
            <p class="lead">Welcome to our zero hunger initiative! </p>
        </section>
        <section class="col-md-6 text-end">
            <h1 id="title">Welcome,@ViewBag.username</h1>
        </section>
    </div>
    <br /><br />

          <div class="row">
              <section class="col-md-3">
                  <div class="mycard-header">
                      <h4>Total Employees</h4>
                  </div>
                  <div class="mycard">
                      <div class="circle"><span>@ViewBag.empcount</span></div>
                  </div>
              </section>
              <Section class="col-md-3">
                  <div class="mycard-header">
                      <h4>Total Restaurents</h4>
                  </div>
                  <div class="mycard">
                      <div class="circle"><span>@ViewBag.rescount</span></div>
                  </div>
              </Section>
              <Section class="col-md-3">
                  <div class="mycard-header">
                      <h4>Total Admins</h4>
                  </div>
                  <div class="mycard">
                      <div class="circle"><span>@ViewBag.admincount</span></div>
                  </div>
              </Section>
              <Section class="col-md-3">
                  <div class="mycard-header">
                      <h4>Pending Requests</h4>
                  </div>
                  <div class="mycard">
                      <div class="circle"><span>@ViewBag.pendingcount</span></div>
                  </div>
              </Section>

              <Section class="col-md-3">
                  <div class="mycard-header">
                      <h4>Collected Requests</h4>
                  </div>
                  <div class="mycard">
                      <div class="circle"><span>@ViewBag.collectedcount</span></div>
                  </div>
              </Section>

              <Section class="col-md-3">
                  <div class="mycard-header">
                      <h4>Delivered Requests</h4>
                  </div>
                  <div class="mycard">
                      <div class="circle"><span>@ViewBag.deliveredcount</span></div>
                  </div>
              </Section>
          </div>
</main>